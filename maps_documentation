swagger: "2.0"
info:
  version: 1.0.0
  title: API de Integração com Google Maps
  description: API para integração com serviços do Google Maps
basePath: /api/google/maps
schemes:
  - http
tags:
  - name: Integração com Google Maps
    description: Serviços de integração com o Google Maps

paths:
  /andress:
    get:
      tags:
        - Integração com Google Maps
      summary: Obter informações de endereço do Google Maps
      description: Obtém informações de endereço do Google Maps com base em um parâmetro.
      parameters:
        - in: query
          name: param
          required: true
          type: string
          description: Parâmetro para obter informações de endereço.
      responses:
        200:
          description: Informações de endereço obtidas com sucesso.
          schema:
            $ref: '#/definitions/GeocodingResponse'

definitions:
  GeocodingResponse:
    type: object
    properties:
      latitude:
        type: number
        format: double
        description: Latitude da localização.
      longitude:
        type: number
        format: double
        description: Longitude da localização.
